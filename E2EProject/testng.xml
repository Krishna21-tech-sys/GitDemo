<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
  
  <listeners>
  	<listener class-name = "Academy.TestNGListener"/>
  </listeners>

  <test name="App testing">
    <classes>
      <class name="Academy.AppTest"/>
    </classes>
  </test>
  
  <test name="Home page">
    <classes>
      <class name="Academy.homePage"/>
    </classes>
  </test>
  
  <test name="Validate navigation bar is present or not">
    <classes>
      <class name="Academy.validateNavBar"/>
    </classes>
  </test>
  
  <test name="Validating title in a page">
    <classes>
      <class name="Academy.validateTitle"/>
    </classes>
  </test>
</suite> <!-- Suite -->
